<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="maba_webpack_migration.twig.webpack_assetic_extension"
                 class="Maba\Bundle\WebpackMigrationBundle\Twig\WebpackAsseticExtension">
            <tag name="twig.extension"/>

            <argument type="service">
                <service class="Maba\Bundle\WebpackMigrationBundle\Twig\WebpackAsseticNodeVisitor">
                    <argument>%kernel.cache_dir%/webpack-migration/</argument>
                    <argument>%assetic.variables%</argument>
                    <argument>%maba_webpack.twig_function_name%</argument>
                    <argument>%maba_webpack_migration.loader_prefix%</argument>
                </service>
            </argument>
        </service>
    </services>
</container>
